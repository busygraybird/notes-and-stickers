{
    "compilerOptions": {
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./build",
        "preserveConstEnums": true,
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "typings/*"
    ]
}
